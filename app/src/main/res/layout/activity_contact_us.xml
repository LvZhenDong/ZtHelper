<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/line_divider" />

    <ScrollView
        android:id="@+id/sv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView style="@style/CvList">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="5dp"
                            android:background="@color/colorAccent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/service_phone"
                            android:textColor="@color/tv666"
                            android:textSize="@dimen/text_size_tv" />

                        <TextView
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_phone"
                            android:id="@+id/tv_service_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/tv666"
                            android:textSize="@dimen/text_size_tv" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sales"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <View
                            android:layout_width="20dp"
                            android:layout_height="5dp"
                            android:background="@color/tv_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/sales_phone"
                            android:textColor="@color/tv666"
                            android:textSize="@dimen/text_size_tv" />

                        <TextView
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_phone"
                            android:id="@+id/tv_sales_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/tv666"
                            android:textSize="@dimen/text_size_tv" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.github.jdsjlzx.recyclerview.LRecyclerView
                android:id="@+id/rv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                style="@style/CvList">
                <com.egr.drillinghelper.ui.widgets.SquareRelativeLayout
                    android:id="@+id/rl_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_qr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.egr.drillinghelper.ui.widgets.SquareRelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>