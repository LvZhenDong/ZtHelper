<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/padding_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_e6_radius"
        android:text="2017/09/24 11:06"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_radius"
        android:layout_width="match_parent"
        android:padding="@dimen/padding_vertical"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sys_message"
            android:textColor="@color/tv333"
            android:textSize="@dimen/text_size_big" />

        <TextView
            android:id="@+id/tv_info"
            android:textSize="@dimen/text_size_tv"
            android:textColor="@color/tv666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>