<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/margin_top"
        android:id="@+id/tv_time"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gray_e6_radius"
        android:text="2017/09/24 11:06"
        android:textColor="@color/white" />

    <android.support.v7.widget.CardView
        style="@style/CvList"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="@dimen/padding_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sys_message"
                android:textColor="@color/tv333"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/tv_info"
                android:textSize="@dimen/text_size_tv"
                android:textColor="@color/tv666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>