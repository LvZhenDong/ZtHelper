<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_vertical"
    android:background="@drawable/bg_white_radius_selector"
    android:orientation="vertical"
    android:padding="@dimen/padding_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="2017/09/24 11:06"
            android:textColor="@color/tv999"
            android:textSize="@dimen/text_size_tv_small" />

        <TextView
            android:id="@+id/tv_read_reply"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_purple_btn_radius"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_vertical"
            android:paddingRight="@dimen/padding_vertical"
            android:text="@string/read_reply"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_tv"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:text="看了水力压裂，钻探到资源层时会水平延伸长的距离，而且看的出来越长越好，那么怎么"
        android:textColor="@color/tv333"
        android:textSize="@dimen/text_size_tv" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/bg_white_top_radius"
        android:scaleType="centerCrop"
        android:src="@drawable/test" />

</LinearLayout>