<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_vertical"
    android:background="@drawable/bg_white_radius">

    <RelativeLayout
        android:id="@+id/rl_mall"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_actionbar"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_into_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/into_mall"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_into_mall"
            android:layout_centerHorizontal="true"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/ic_watch_more"
            android:padding="5dp"
            android:text="@string/watch_more"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_parts"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_white_radius_selector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_white_top_radius"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_vertical"
            android:paddingRight="@dimen/padding_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:singleLine="true"
            android:textColor="@color/tv333"
            android:textSize="@dimen/text_size_tv" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:paddingLeft="@dimen/padding_vertical"
            android:paddingRight="@dimen/padding_vertical"
            android:singleLine="true"
            android:textColor="@color/tv999"
            android:textSize="@dimen/text_size_tv" />
    </LinearLayout>
</FrameLayout>