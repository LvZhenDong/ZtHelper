<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CvList"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/rl_mall"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_radius_actionbar"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_into_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/into_mall"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_into_mall"
            android:layout_centerHorizontal="true"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/ic_watch_more"
            android:padding="5dp"
            android:text="@string/watch_more"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_parts"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_left="@dimen/radius"
            app:riv_corner_radius_top_right="@dimen/radius"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:paddingLeft="@dimen/padding_vertical"
            android:paddingRight="@dimen/padding_vertical"
            android:singleLine="true"
            android:textColor="@color/tv333"
            android:textSize="@dimen/text_size_tv" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:paddingLeft="@dimen/padding_vertical"
            android:paddingRight="@dimen/padding_vertical"
            android:singleLine="true"
            android:textColor="@color/tv999"
            android:textSize="@dimen/text_size_tv" />
    </LinearLayout>
</android.support.v7.widget.CardView>